{% extends 'layout.html.twig' %}

{% block title 'Catálogo de ideas' %}

{% block content %}
    <h1>Catálogo de ideas</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Título</th>
                <th>Detalle</th>
                <th>Autor</th>
            </tr>
        </thead>
        <tbody>
            {% for idea in ideas %}
            <tr>
                <td>{{ idea.fechaPropuesta|date('d/m/Y') }}</td>
                <td><a href="{{ path('idea_mostrar', {'id': idea.id}) }}">{{ idea.titulo }}</a></td>
                <td>{{ idea.descripcion }}</td>
                <td><a href="{{ path('idea_usuario_mostrar', {'id': idea.autor.id}) }}">{{ idea.autor }}</a></td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">No hay ideas que mostrar</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
