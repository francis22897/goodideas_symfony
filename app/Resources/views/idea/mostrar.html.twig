{% extends 'layout.html.twig' %}

{% block title %}
    Detalle: {{ idea.titulo }}
{% endblock %}

{% block content %}
    <h1>{{ idea.titulo }}</h1>
    <h2>Propuesta por {{ idea.autor }} el {{ idea.fechaPropuesta|date('d/m/Y') }}</h2>
    <p>{{ idea.descripcion }}</p>

    <a href="{{ path('idea_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de ideas</a>
{% endblock %}

